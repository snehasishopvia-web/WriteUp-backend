# Server Configuration
PORT=8192
NODE_ENV=production
IS_DEVELOPMENT=dev

# Security: Set to 0 only for databases with self-signed SSL certificates
# Remove this line for production databases with valid SSL certificates
NODE_TLS_REJECT_UNAUTHORIZED=0

# JWT Configuration
JWT_ACCESS_SECRET="your-super-secret-access-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_ACCESS_EXPIRY=1800
JWT_REFRESH_EXPIRY=2592000

# Allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# For cloud databases (Aiven, Render, etc.), include sslmode=require in the URL
# Example formats:
# - Aiven: postgres://user:pass@host:port/db?sslmode=require
# - Render: postgresql://user:pass@host/db?ssl=true
# - Local: postgresql://postgres:password@localhost:5432/dbname
DATABASE_URL=postgres://user:password@host:port/database?sslmode=require

# Individual database parameters (optional, used as fallback)
DB_NAME=defaultdb
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password

# PostgreSQL Usage
USE_POSTGRES=False

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Email Verification
KICKBOX_API_KEY=your_kickbox_api_key
